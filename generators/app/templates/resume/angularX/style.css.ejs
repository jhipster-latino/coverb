/* style.css */
#<%=_.kebabCase(COVER_NAME)%> {
    font-family: Arial, Helvetica, sans-serif;
}

#<%=_.kebabCase(COVER_NAME)%> .bg-blue {
    background: #3e8acc;
}

#<%=_.kebabCase(COVER_NAME)%> .border {
    border: 1px black dashed;
}

#<%=_.kebabCase(COVER_NAME)%> .profile {
    background: white;
    width: 250px;
    height: 250px;
    border-radius: 50%;
    margin: 5% auto;
}

#<%=_.kebabCase(COVER_NAME)%> fa-icon {
    font-size: 30px;
    margin: 1%;
}

#<%=_.kebabCase(COVER_NAME)%> content {
    height: 100%;
}

@media print {
    div .card {
        margin: auto 0;
    }
    html {
        margin: 3% auto;
        padding: 1%;
    }
    header,
    nav,
    footer,
    .footer {
        display: none !important;
    }
}

#<%=_.kebabCase(COVER_NAME)%> #logo {
    background: url('/content/images/logo/icons/logo-alternate.png');
    display: inline-block;
    width: 250px;
    height: 250px;
    background-size: 105%;
    border-radius: 50%;
    background-color: #fff;
    margin: 5% auto;
}

#<%=_.kebabCase(COVER_NAME)%> .logo-img span {
    display: inline-block;
    width: 70px;
    height: 70px;
    background-size: 65px;
    background-color: #fff;
    background-repeat: no-repeat;
    background-position: center;
}

