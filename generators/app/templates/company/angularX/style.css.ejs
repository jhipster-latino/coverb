/* style.css */
#<%=_.kebabCase(COVER_NAME)%> {
    font-family: Arial, Helvetica, sans-serif;
}

#<%=_.kebabCase(COVER_NAME)%> .jumbotron {
    background: #3e8acc;
    color: whitesmoke;
    padding: 100px 25px;
}

#<%=_.kebabCase(COVER_NAME)%> .container-fluid {
    padding: 60px 25px;
}

#<%=_.kebabCase(COVER_NAME)%> .bg-gray {
    background: lightgray;
}

#<%=_.kebabCase(COVER_NAME)%> fa-icon {
    font-size: 150px;
    color: #3e8acc;
}

#<%=_.kebabCase(COVER_NAME)%> .thumbnail {
    padding: 0 0 15px 0;
    border: solid #3e8acc;
    border-radius: 0;
    background: white;
}

#<%=_.kebabCase(COVER_NAME)%> .thumbnail img {
    width: 100%;
    height: 100%;
    margin-bottom: 10px;
}

#<%=_.kebabCase(COVER_NAME)%> .panel {
    border: solid #3e8acc;
    border-radius: 0;
    transition: box-shadow 0.5s;
}

#<%=_.kebabCase(COVER_NAME)%> .panel:hover {
    box-shadow: 5px 0px 40px rgba(0, 0, 0, 0.2);
}

#<%=_.kebabCase(COVER_NAME)%> .panel-footer .btn:hover {
    border: 1px solid #3e8acc;
    background-color: #fff !important;
    color: #3e8acc;
}

#<%=_.kebabCase(COVER_NAME)%> .panel-heading {
    color: #fff !important;
    background-color: #3e8acc !important;
    padding: 25px;
    border-bottom: 1px solid transparent;
    border-top-left-radius: 0px;
    border-top-right-radius: 0px;
    border-bottom-left-radius: 0px;
    border-bottom-right-radius: 0px;
}

#<%=_.kebabCase(COVER_NAME)%> .panel-footer {
    background-color: #fff !important;
}

#<%=_.kebabCase(COVER_NAME)%> .panel-footer h3 {
    font-size: 32px;
}

#<%=_.kebabCase(COVER_NAME)%> .panel-footer h4 {
    color: #aaa;
    font-size: 14px;
}

#<%=_.kebabCase(COVER_NAME)%> .panel-footer .btn {
    margin: 15px 0;
    color: #fff;
    background-color: #3e8acc;
}

/* Images */

#<%=_.kebabCase(COVER_NAME)%> #logo {
    background: url('/content/images/logo/icons/logo-alternate.png') no-repeat center center;
    display: inline-block;
    width: 200px;
    height: 200px;
    background-size: 105%;
    border-radius: 50%;
    background-color: #fff;
    margin: 5% auto;
}
